{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug push_swap",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/push_swap",
      "args": ["2", "5", "7", "1", "6", "3", "9", "4", "8"], // puedes cambiarlo por lo que quieras
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build push_swap",
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ]
}
